[flake8]
max-line-length = 127
max-complexity = 10
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .tox,
    .pytest_cache,
    .mypy_cache
ignore =
    # W503: line break before binary operator (black compatibility)
    W503,
    # E203: whitespace before ':' (black compatibility)
    E203
per-file-ignores =
    __init__.py:F401
